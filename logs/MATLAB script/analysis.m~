Fstop = 5;
Fpass = 30;
Astop = 150;
Apass = 0.05;
Fs = 1/0.012;

d = designfilt('highpassfir','StopbandFrequency',Fstop, ...
  'PassbandFrequency',Fpass,'StopbandAttenuation',Astop, ...
